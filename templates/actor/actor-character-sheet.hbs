<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">
	<!--- Sheet Header -->
	<header class="sheet-header">
		<img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
		<div class="header-fields">
			<h1 class="charname flexrow flex-center flex-between"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
			<div class="grid grid-4col">
				<a for="system.creation_points.max" class="special-label">Creation Points</a>
				<input type="text" class="cp_input" name="Creation Points" value="{{system.creation_points.max}}" data-dtype="Number"/>
				<span> / </span>
				<p class="special-label">{{numberFormat system.creation_points.val decimals=0 sign=false}}</p>
			</div>
		</div>
	</header>

	<!--- Sheet Tab Navigation -->
	<nav class="sheet-tabs tabs" data-group="primary">
		<!--- Default tab is specified in actor-sheet.mjs -->
		<a class="item" data-tab="features">S.P.E.C.I.A.L.</a>
		<a class="item" data-tab="skill">Skills</a>
		<a class="item" data-tab="description">Description</a>
		<a class="item" data-tab="items">Items</a>
		<a class="item" data-tab="spells">Spells</a>
		<a class="item" data-tab="effects">Perks</a>
	</nav>

	<!--- Sheet Body -->
	<section class="sheet-body">
		<div class="tab features" data-group="primary" data-tab="features">
			
			<div class="special grid grid-7col"">
				{{#each system.special as |special key|}}
				<div class="special-content grid grid-9col">
					<div>
						<a for="system.special.{{key}}" class="special-label">{{key}}</a>
						<input type="text" class="special_input" name="system.special.{{key}}.label" value="{{special.val}}" data-dtype="Number"/>
						<input type="button" class="special_button" name="system.special.{{key}}.label" value="+"/>
						<input type="button" class="special_button" name="system.special.{{key}}.label" value="-"/>
					</div>
					<div>
						<a class="special-label">Mod.</a>
						<input type="text" class="special_mod" name="system.special.{{key}}.label" value="{{special.mod}}" data-dtype="Number"/>
					</div>
					<div>
						<span class="ability-mod rollable" data-roll="d100cs<(@special.{{key}}.mfd.two)" data-label="2">2</span>
						<p class="special-label">{{numberFormat special.mfd.two decimals=0 sign=false}}</p>
					</div>
					<div>
						<span class="ability-mod rollable" data-roll="d100cs<(@special.{{key}}.mfd.one_and_half)" data-label="1½">1½</span>
						<p class="special-label">{{numberFormat special.mfd.one_and_half decimals=0 sign=false}}</p>
					</div>
					<div>
						<span class="ability-mod rollable" data-roll="d100cs<(@special.{{key}}.mfd.full)" data-label="Full">Full</span>
						<p class="special-label">{{numberFormat special.mfd.full decimals=0 sign=false}}</p>
					</div>
					<div>
						<span class="ability-mod rollable" data-roll="d100cs<(@special.{{key}}.mfd.half)" data-label="½">½</span>
						<p class="special-label">{{numberFormat special.mfd.half decimals=0 sign=false}}</p>
					</div>
					<div>
						<span class="ability-mod rollable" data-roll="d100cs<(@special.{{key}}.mfd.three_quarter)" data-label="¾">¾</span>
						<p class="special-label">{{numberFormat special.mfd.three_quarter decimals=0 sign=false}}</p>
					</div>
					<div>
						<span class="ability-mod rollable" data-roll="d100cs<(@special.{{key}}.mfd.quarter)" data-label="¼">¼</span>
						<p class="special-label">{{numberFormat special.mfd.quarter decimals=0 sign=false}}</p>
					</div>
					<div>
						<span class="ability-mod rollable" data-roll="d100cs<(@special.{{key}}.mfd.tenth)" data-label="1/10">1/10</span>
						<p class="special-label">{{numberFormat special.mfd.tenth decimals=0 sign=false}}</p>
					</div>
				</div>
				{{/each}}
			</div>
		</div>
	</section>
</form>

